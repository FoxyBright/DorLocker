<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/door_swipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="@color/app_background"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/left_swipe"
        android:layout_marginEnd="16dp"
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:weightSum="2">

        <ImageView
            android:id="@+id/edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="9dp"
            android:contentDescription="@string/img_des"
            android:src="@drawable/edit_pencil"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/star"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/img_des"
            android:layout_marginStart="9dp"
            android:src="@drawable/favorite_button_disactivate"
            android:gravity="center" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cam_video"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/rounded_corner_rect"
                android:contentDescription="@string/img_des"
                android:scaleType="centerCrop"
                android:src="@drawable/test_img"
                app:layout_constraintBaseline_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/favorite"
                android:visibility="invisible"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/img_des"
                android:layout_margin="3dp"
                android:src="@drawable/star"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="160dp"
                android:contentDescription="@string/img_des"
                android:src="@drawable/play_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="190dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bottom_rounded_corner_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/status_bar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/rounded_corner_rect"
            app:layout_constraintTop_toBottomOf="@+id/cam_video"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/door_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circe_regular"
                    android:text="@string/intercom"
                    android:textColor="@color/text_color"
                    android:textSize="17sp" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/status_network"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circe_regular"
                    android:text="@string/network"
                    android:textColor="@color/network_color"
                    android:textSize="14sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/door_locker"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                android:contentDescription="@string/img_des"
                android:src="@drawable/lock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.daimajia.swipe.SwipeLayout>